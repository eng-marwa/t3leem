<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/mp3_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_background"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:src="@drawable/ic_mp3_icon"/>

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="@id/txt_name"
                android:visibility="visible"
                android:padding="8dp"
                android:src="@drawable/playicon"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/img_type"
                android:layout_toEndOf="@id/img_play"
                android:padding="4dp"
                tools:text="sdcfhstfgdjhftsgjsyftrjfgjfgjfgtjfgtrjfgtjfgjfgjdjtyrjfdgjnhgghttruhytrhtrh"
                android:background="@android:color/transparent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textColor"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_play"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingStart="4dp"
                android:text="5/5/2020"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/Dgrey" />

            <ProgressBar
                android:id="@+id/pbProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:visibility="invisible"/>

        </RelativeLayout>
</androidx.cardview.widget.CardView>