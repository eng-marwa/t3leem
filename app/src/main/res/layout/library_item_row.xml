<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_background"
    android:layout_margin="4dp"
    android:padding="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/fake_user_icon"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorPrimaryDark"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvCourseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/img_profile"
                android:gravity="start"
                android:padding="4dp"
                android:text="كورس اللغة الانجليزية"
                android:background="@android:color/transparent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCourseName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/img_profile"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:padding="4dp"
                android:text="د/ محمد متولي"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textColor"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDoctorName"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:padding="4dp"
                android:text="6 مايو 2020 "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/Dgrey" />

            <TextView
                android:id="@+id/tvPDFFiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDoctorName"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@id/img_profile"
                android:drawableEnd="@drawable/ic_pdf"
                android:drawablePadding="8dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="4dp"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/textColor" />

        </RelativeLayout>

</androidx.cardview.widget.CardView>