<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/notification_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_background"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background">

            <ImageView
                android:id="@+id/notification_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_notification"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimaryDark"
                android:layout_marginEnd="8dp"
                android:src="@drawable/iconplay"/>

            <TextView
                android:id="@+id/txt_content"
                style="@style/InputsThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/notification_imageView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/img_profile"
                android:background="@drawable/white_background_r6"
                android:text="تم رفع فديو جديد في كورس تعليم اللغه الانجليزيه"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/textColor"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/raleway"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>